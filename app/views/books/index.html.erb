<div class="row">
  
  <div class="col-xs-3">
    
    <h2>New Book</h2>
      <!--バリデーションメッセージ-->
  
    <%= form_with model:@book, local:true do |f| %>
    
      <h4>Title</h4>
      <%= f.text_field :title %>
    
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      
      <%= f.submit 'Create Book' %>
    
    <% end %>
    
  </div>
  
  
  <div class="col-xs-9">
    
    <h1>Books</h1>
  
    <section class ="book-box">
      
        <!--<div class="record">-->
        <!--  <div class ="title-contents b"></div>-->
        <!--  <div class ="body-contents b"></div>-->
        <!--  <div class ="button-contents b">-->
        <!--  </div>-->
        <!--</div>-->
      
      <table>
        　<tr align="center">
        　　<th width ="185">title</th>
        　　<th width ="300">body</th>
        　</tr>
        <% @books.each do |book| %>
        　<tr>
        　　<td><%= book.title %></td>
        　　<td><%= book.body %></td>
          　  <th>
            　　  <%= link_to "show", book_path(book) %>
                <%= link_to "edit", edit_book_path(book) %>
                <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
        　　    </th>
        　</tr>
        <% end %>
      </table>
  
    </section>
    
  </div>
  
</div>
